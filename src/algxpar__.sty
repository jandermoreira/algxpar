% axp@MakeCommand: builds the command (see axp@DefineCommand)
\newlength{\axp@CurrentTokenWidth}
\NewDocumentCommand{\axp@MakeCommand}{ s }{%
    \AlgSet{\axp@CommandOptions}%
    % Dimensions
    \settowidth{\axp@CurrentTokenWidth}{\axp@MakeSingleToken{}{\axp@CommandKeyword}{~}}%
    \IfBooleanTF{#1}{%
        \axp@CalculateDimensions{0}% close block
    }{%
        \axp@CalculateDimensions{1}% open/continue block
    }%
    %! formatter = off
    % Making the line: text
    \axp@MakeSingleToken{}{\axp@CommandKeyword}{~}%
    \setlength{\fboxsep}{0pt}\fbox{%
        \parbox[t]{\axp@TextWidth}{%
            {\axp@TextStyle\axp@CommandText}%
            \axp@MakeSingleToken{~}{\axp@CommandComplementKeyword}{}\strut%
        }\strut%
    }%  fbox
    % Making the line: comment
    \ifaxp@NoCommentPresent\else%
        \axp@CommentSymbol~%
        \setlength{\fboxsep}{0pt}\fbox{%
            \parbox[t]{\axp@CommentWidth}{%
                \axp@CommentStyle\color{\axp@CommentColor}%
                \axp@CommentText\strut%
            }\strut%
        }%  fbox
    \fi%
    %! formatter = on
}


